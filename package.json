{
  "private": true,
  "name": "gearedapp-preact-pwa",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "webpack --env.production --config config/webpack",
    "start": "serve dist -s",
    "watch": "webpack-dev-server --open --config config/webpack",
    "deploy": "yarn build && firebase deploy",
    "test": "jest --coverage"
  },
  "dependencies": {
    "ganalytics": "^2.0.1",
    "md-colors": "^1.0.0",
    "muicss": "^0.9.26",
    "preact": "^8.2.5",
    "preact-mui": "^0.1.1",
    "preact-render-spy": "^1.1.0",
    "preact-render-to-string": "^3.6.3",
    "preact-router": "^2.5.7",
    "preact-compat": "^3.17.0"
  },
  "jest": {
    "setupFiles": [
      "./config/tests.js"
    ],
    "testURL": "http://localhost:3000",
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/__mocks__/fileMock.js",
      "\\.(css|less)$": "identity-obj-proxy",
      "^react$": "preact-compat",
      "^react-dom$": "preact-compat"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^7.1.3",
    "babel-core": "^6.26.0",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-react-jsx": "^6.22.0",
    "babel-preset-babili": "^0.1.4",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-2": "^6.22.0",
    "chai": "^4.1.2",
    "clean-webpack-plugin": "^0.1.15",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.5",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^1.1.4",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "node-sass": "^4.5.0",
    "offline-plugin": "^4.8.4",
    "postcss-loader": "^2.0.6",
    "preact-compat-enzyme": "^0.2.5",
    "preact-jsx-chai": "^2.2.1",
    "preact-test-utils": "^0.1.3",
    "sass-loader": "^6.0.3",
    "serve": "^6.0.6",
    "style-loader": "^0.18.2",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.7.1"
  }
}
